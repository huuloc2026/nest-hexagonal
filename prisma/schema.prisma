generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id          String   @id @default(uuid())
    name        String
    description String
    price       Decimal
    stock       Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    salt      String
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
